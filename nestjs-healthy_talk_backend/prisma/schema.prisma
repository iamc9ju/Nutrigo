generator client {
  provider   = "prisma-client-js"
  engineType = "library"
}

datasource db {
  provider = "postgresql"
}

enum UserRole {
  patient
  nutritionist
  admin
}

enum GenderType {
  male
  female
  other
}

enum AllergySeverity {
  mild
  moderate
  severe
}

enum VerificationStatus {
  pending
  approved
  rejected
}

model User {
  id           String    @id @default(uuid()) @map("user_id") @db.Uuid
  email        String    @unique @map("email") @db.VarChar(100)
  passwordHash String    @map("password_hash") @db.VarChar(255)
  phone        String?   @unique @map("phone") @db.VarChar(20)
  role         UserRole  @map("role")
  is2faEnabled Boolean   @default(false) @map("is_2fa_enabled")
  twoFaSecret  String?   @map("two_fa_secret") @db.VarChar(100)
  createdAt    DateTime  @default(now()) @map("created_at")
  deletedAt    DateTime? @map("deleted_at")

  // Relations
  patient       Patient?
  nutritionist  Nutritionist?
  refreshTokens RefreshToken[]

  @@index([email])
  @@index([phone])
  @@map("users")
}

model Patient {
  id                String           @id @default(uuid()) @map("patient_id") @db.Uuid
  userId            String           @unique @map("user_id") @db.Uuid
  user              User             @relation(fields: [userId], references: [id], onDelete: Cascade)
  firstName         String           @map("first_name") @db.VarChar(100)
  lastName          String           @map("last_name") @db.VarChar(100)
  dateOfBirth       DateTime?        @map("date_of_birth") @db.Date
  gender            GenderType?      @map("gender")
  bloodType         String?          @map("blood_type") @db.VarChar(5)
  chronicDiseases   String[]         @map("chronic_diseases")
  isProfileComplete Boolean          @default(false) @map("is_profile_complete")
  deletedAt         DateTime?        @map("deleted_at")
  patientAllergies  PatientAllergy[]
  healthMetrics     HealthMetric[]

  @@map("patients")
}

model Nutritionist {
  id                 String             @id @default(uuid()) @map("nutritionist_id") @db.Uuid
  userId             String             @unique @map("user_id") @db.Uuid
  user               User               @relation(fields: [userId], references: [id], onDelete: Cascade)
  firstName          String             @map("first_name") @db.VarChar(100)
  lastName           String             @map("last_name") @db.VarChar(100)
  licenseNumber      String?            @unique @map("license_number") @db.VarChar(50)
  licenseDocumentUrl String?            @map("license_document_url") @db.VarChar(500)
  consultationFee    Decimal            @default(500.00) @map("consultation_fee") @db.Decimal(10, 2)
  verificationStatus VerificationStatus @default(pending) @map("verification_status")
  verifiedAt         DateTime?          @map("verified_at")
  verifiedBy         String?            @map("verified_by") @db.Uuid
  deletedAt          DateTime?          @map("deleted_at")

  @@map("nutritionists")
}

model PatientAllergy {
  id             Int             @id @default(autoincrement()) @map("patient_allergy_id")
  patientId      String          @map("patient_id") @db.Uuid
  patient        Patient         @relation(fields: [patientId], references: [id], onDelete: Cascade)
  ingredientName String          @map("ingredient_name") @db.VarChar(100)
  severity       AllergySeverity @default(moderate) @map("severity")
  note           String?         @map("note") @db.Text
  createdAt      DateTime        @default(now()) @map("created_at")

  @@index([patientId])
  @@map("patient_allergies")
}

model HealthMetric {
  id             Int      @id @default(autoincrement()) @map("health_metric_id")
  patientId      String   @map("patient_id") @db.Uuid
  patient        Patient  @relation(fields: [patientId], references: [id], onDelete: Cascade)
  weightKg       Decimal? @map("weight_kg") @db.Decimal(5, 2)
  heightCm       Decimal? @map("height_cm") @db.Decimal(5, 2)
  bmi            Decimal? @map("bmi") @db.Decimal(5, 2)
  bodyFatPercent Decimal? @map("body_fat_percent") @db.Decimal(4, 1)
  recordedAt     DateTime @default(now()) @map("recorded_at")

  @@map("health_metrics")
}

model RefreshToken {
  id         String    @id @default(uuid()) @map("refresh_token_id") @db.Uuid
  userId     String    @map("user_id") @db.Uuid
  user       User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  secretHash String    @unique @map("token_hash") @db.VarChar(255)
  deviceId   String?   @map("device_id") @db.VarChar(255)
  usedAt     DateTime? @map("used_at")
  ipAddress  String?   @map("ip_address") @db.VarChar(45)
  userAgent  String?   @map("user_agent") @db.Text
  expiresAt  DateTime  @map("expires_at")
  createdAt  DateTime  @default(now()) @map("created_at")
  revokedAt  DateTime? @map("revoked_at")
  family     String?   @map("family") @db.Uuid

  @@index([userId])
  @@index([secretHash])
  @@index([family])
  @@map("refresh_tokens")
}
